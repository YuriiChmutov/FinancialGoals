<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        @* <span style="color: yellow" class="oi oi-home" aria-hidden="true"></span>  *@
                        <span style="font-family: EightBitsFont; color: gold; text-align: center">Home</span>
                    </NavLink>
                </div>
            </NotAuthorized>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span style="font-family: EightBitsFont; color: gold">Home</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="spends" Match="NavLinkMatch.All">
                        <span style="font-family: EightBitsFont; color: gold; text-align: center">Spends</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="accounts">
                        @* <span class="oi oi-list" aria-hidden="true"></span>  *@
                        <span style="font-family: EightBitsFont; color: gold">
                            Accounts
                        </span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="categories">
                        @* <span class="oi oi-list" aria-hidden="true"></span>  *@
                        <span style="font-family: EightBitsFont; color: gold">
                            Categories
                        </span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="transactions">
                        @* <span class="oi oi-transfer" aria-hidden="true"></span>  *@
                        <span style="font-family: EightBitsFont; color: gold">
                            Transactions
                        </span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}